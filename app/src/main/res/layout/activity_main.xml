<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/grey_f3f3f3">

    <!--主界面的头部的layout -->
<RelativeLayout
    android:id="@+id/main_bar_layout"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <!--TODO 1.Strihg，Color的书写-->
    <TextView
        android:text="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="10dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/black"/>
        <ImageView
            android:id="@+id/main_iv_search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/search"
            android:layout_alignParentRight="true"
            android:padding="10dp" />
</RelativeLayout>

    <!-- TODO 2.滑动的东西scrollbars去掉-->
<ListView
    android:id="@+id/main_lv"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_below="@id/main_bar_layout"
    android:padding="10dp"
    android:divider="@null"
    android:scrollbars="none"
    android:dividerHeight="6dp"
    android:background="@color/grey_f3f3f3"/>
    <!-- TODO 3.drawable中创建一个绿色的边框-->
    <ImageButton
        android:id="@+id/main_btn_more"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/more"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:background="@drawable/main_morebtn_bg"/>
    <!--TODO 按钮左边添加图片-->
    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@id/main_btn_more"
        android:background="@drawable/main_recordbtn_bg"
        android:layout_toLeftOf="@id/main_btn_more"
        android:text="@string/editone"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:drawableLeft="@mipmap/edit"
        android:gravity="center_vertical"/>

</RelativeLayout>